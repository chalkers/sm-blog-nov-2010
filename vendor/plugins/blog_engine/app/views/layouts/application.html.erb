<!DOCTYPE html>
<html>
<head>
  <title>BlogNew</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<%= display_flashes(flash) %>

<% if signed_in? %>
    <p><%= link_to "Sign out", sign_out_path, :method => :delete %></p>
    <% else %>
    <p><%= link_to "Sign in", sign_in_path %></p>
<% end %>

<%= yield %>

</body>
</html>
